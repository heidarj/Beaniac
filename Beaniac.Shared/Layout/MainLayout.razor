@inherits LayoutComponentBase
<FluentDesignTheme StorageName="theme" CustomColor="#6F4E37" />
<FluentLayout>
    @if (ScreenSize >= GridItemSize.Sm)
    {
        <FluentLayout Orientation="Orientation.Horizontal">
            <NavBar Vertical=true/>
            <FluentBodyContent Class="body-content">
                <div class="content">
                    @Body
                </div>
            </FluentBodyContent>
        </FluentLayout>
    }

    @if (ScreenSize < GridItemSize.Sm)
    {
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
        <NavBar Vertical=false/>
    }
</FluentLayout>

<FluentGrid OnBreakpointEnter="@OnBreakpointEnterHandler" style="display: none;" />
<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code
{
    GridItemSize ScreenSize;
    void OnBreakpointEnterHandler(GridItemSize size) => ScreenSize = size;
}